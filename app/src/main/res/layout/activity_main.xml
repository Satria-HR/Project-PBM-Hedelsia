<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9EBE9"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logoapp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130sp"
        android:layout_marginTop="30sp"
        android:orientation="horizontal">

        //HedelsiaBrand
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HEDELSIA"
            android:textAlignment="center"
            android:fontFamily="@font/overlockblack"
            android:textSize="43sp"
            android:textColor="#009028"
            android:textStyle="bold"/>
    </LinearLayout>

    //List Menu

    //BuahdanSayur
    <androidx.cardview.widget.CardView
        android:id="@+id/buahdansayur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        app:cardBackgroundColor="#FF9431"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buah dan Sayur"
                android:fontFamily="@font/overlockblack"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    //infoAplikasi
    <androidx.cardview.widget.CardView
        android:id="@+id/infoapps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="110dp"
        app:cardBackgroundColor="#4EB5FF"
        app:cardCornerRadius="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Info Aplikasi"
                android:fontFamily="@font/overlockblack"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v.1.1.1"
            android:fontFamily="@font/overlockblack"
            android:textSize="15sp"
            android:textAlignment="center"
            android:textColor="#FF000000"/>
    </LinearLayout>

</LinearLayout>